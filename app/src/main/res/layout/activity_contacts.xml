<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <!--        the friend details-->
    <LinearLayout
        android:id="@+id/topContactWin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00BCD4"
        android:orientation="horizontal"
        android:padding="2dp">


        <ImageView
            android:id="@+id/profilePicConWin"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            tools:srcCompat="@drawable/profile5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userNameConWin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="Nadav Yakobovich"
                android:textColor="#151515">

            </TextView>

        </LinearLayout>



    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3F2FD"
            android:gravity="center"
            android:text="My contacts list"
            android:textSize="20sp"></TextView>
<!--    the contacts list -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatListWin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="here will be the chat">

        </androidx.recyclerview.widget.RecyclerView>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>