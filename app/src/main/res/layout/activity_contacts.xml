<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ContactsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6AAAAAAA"
        android:orientation="vertical">


        <!--        the friend details-->
        <LinearLayout
            android:id="@+id/topContactWin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f2f3f5"
            android:orientation="horizontal"
            android:padding="2dp">


            <ImageView
                android:id="@+id/profilePicConWin"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                tools:srcCompat="@drawable/profile5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userNameConWin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="4dp"
                    android:text="Nadav Yakobovich"
                    android:textColor="#0E1542"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/contacts_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5C6BC0"
            app:layout_constraintBottom_toBottomOf="@id/Contacts_contactsList"
            android:text="Add new Contacts" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E3F2FD"
                android:gravity="center"
                android:text="My contacts list"
                android:textStyle="bold"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>


        <!--        the search Win-->

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->

<!--            <SearchView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content" />-->

<!--            <EditText-->
<!--                android:layout_width="match_parent"-->
<!--                android:id="@+id/search_bar"-->
<!--                android:hint="Search for a friend here"-->
<!--                android:layout_height="wrap_content" />-->

<!--        </LinearLayout>-->
        <!--    the contacts list -->

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="wrap_content"
            android:id="@+id/Contacts_contactsList"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contact_rcContact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="here will be the chat"
                tools:listitem="@layout/singlecontact_layout">

            </androidx.recyclerview.widget.RecyclerView>


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>